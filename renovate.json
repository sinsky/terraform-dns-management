{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "pinDigest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "dependencyDashboard": true,
  "assignAutomerge": true,
  "assignees": ["sinsky"]
}
